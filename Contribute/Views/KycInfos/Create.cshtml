@model ContributeComponents.Domains.KycInfos

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_CreateLayout.cshtml";
}
<div class="parallax-image" data-type="background" data-speed="2" style="background-position: 50% 0px;">
</div>
<div class="container text-center centerPiece">
    <div class="col col-sm-12 countDown-cont rounded">
        <div class="row justify-content-center">
            <div class="col col-sm-12">
                <img src="~/to/images/show-logo.png" width="300"><br>
                <p class="title title--centered">Whitelist Registion</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    @using (Html.BeginForm("Create", "KycInfos", new { area = "" }, FormMethod.Post, new { enctype = "multipart/form-data", id = "form2" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = " isneed col-md-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = " isneed col-md-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FullJobTitle, htmlAttributes: new { @class = " isneed col-md-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.FullJobTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FullJobTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = " isneed col-md-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = " isneed col-md-12" })
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.File, htmlAttributes: new { @class = " isneed col-md-12" })
                <div class="col-md-12">
                    <input type="file" name="file" id="file" multiple="multiple" accept="image/png,image/jpg" /><span class="text-danger attention">@ViewBag.FileIsNullMsg</span>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BtcOriginAddress, htmlAttributes: new { @class = " isneed col-md-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.BtcOriginAddress, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BtcOriginAddress, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Btc, htmlAttributes: new { @class = " isneed col-md-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Btc, new { htmlAttributes = new { @class = "form-control", min = "1"} })
                    @Html.ValidationMessageFor(model => model.Btc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group"><div class="col-md-12 text-right">The ueser in China Mainland and USA is be limited to join the STB Pre-Sale.</div></div>

            <div class="form-group">
                <div class="col-md-3"></div>
                <div class="col-md-9 text-right">
                    <label class="stb-ag"><input type="checkbox" name="Agreement" data-val-required="required" class="iagree" />&nbsp;I accept&nbsp;<a href="/STBChain-Ag.pdf" target="_blank">STBChain's Agreement</a></label>
                    <input type="submit" value="Accept" class="btn sub-btn disabled" />
                </div>
                <div class="showtip"></div>
            </div>
        </div>
    }
    <div id="site-menu">
    </div>
</div>
<input type="hidden" class="lang" value="EN">

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/js/activeMenu.js"></script>
    <script>
        $('.sub-btn').on('click', function () {
            if (!$('.iagree:checked').length) {
                $('.iagree').prop('checked', 'true');
                $(this).val('Create').removeClass('disabled');
                return false;
            } else {
                //$(this).css('pointer-events','none');
            }
        });
        $('.iagree').on('click', function () {
            if ($(this).prop('checked')) {
                $('.sub-btn').removeClass('disabled').val('Create');
            } else {
                $('.sub-btn').addClass('disabled').val('Accept');
            }
        });
    </script>
}